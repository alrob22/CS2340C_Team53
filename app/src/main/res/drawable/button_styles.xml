<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_styles.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#4E3F32" /> <!-- Dark brown background when pressed -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#d0840c" /> <!-- Beige background when not pressed -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
